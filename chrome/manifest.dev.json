{
  "version": "0.0.0",
  "name": "react-chrome-extension-example",
  "manifest_version": 2,
  "description": "Example for react-chrome-extension-boilerplate",
  "browser_action": {
    "default_title": "React Chrome Extension Example",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/icon-16.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png"
  },
  "web_accessible_resources": [
    "img/*.png"
  ],
  "background": {
    "scripts": ["js/background.bundle.js"]
  },
  "content_scripts": [{
    "matches": [
      "https://github.com/*"
    ],
    "js": [
      "js/domListener.bundle.js"
    ],
    "run_at": "document_end"
  }],
  "permissions": [
    "contextMenus",
    "management",
    "notifications",
    "tabs",
    "storage",
    "https://github.com/*"
  ],
  "content_security_policy": "script-src 'self' http://localhost:3000 https://localhost:3000 'unsafe-eval'; connect-src * ; style-src * 'unsafe-inline' 'self' blob:;"
}
